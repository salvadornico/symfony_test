{% extends 'template.html.twig' %}

{% block title %}
	Tasks
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Tasks list</h1>

		<table>
			<thead>
				<tr>
					<th>Name</th>
					<th>Due On</th>
					<th>Finished?</th>
					<th>Created On</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
			{% for task in tasks %}
				<tr>
					<td><a href="{{ path('task_show', { 'id': task.id }) }}">{{ task.name }}</a></td>
					<td>{% if task.due %}{{ task.due|date('Y-m-d') }}{% endif %}</td>
					<td>{% if task.isdone %}Yes{% else %}No{% endif %}</td>
					<td>{% if task.createdat %}{{ task.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
					<td>
						<a href="{{ path('task_edit', { 'id': task.id }) }}" class="btn btn-flat">edit</a>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>

		<div class="row section">
			<a href="{{ path('task_new') }}" class="btn">Create a new task</a>
		</div>
	</div>
{% endblock %}
